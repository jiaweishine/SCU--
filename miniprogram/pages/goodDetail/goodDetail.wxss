/*pages/goodDetail/goodDetail.wxss*/
page{
  padding-bottom: 90rpx;
}
/*轮播图*/
.detail_swiper{
  text-align: center;
}
.swiper_image{
  width: 80%;
}
/*名称、价格*/
.goods_price{
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color:#009589;
}
.goods_title_row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}
.goods_title{
  display: flex;
  flex: 5;
  color:black;
  font-size: 30rpx;
  padding: 0 10rpx;
  margin-left: 5rpx;

  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_collect{
  display: flex;
  flex: 1;
  font-display: column;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #000;
}
.collect_icon{
  width:50rpx;
  height:50rpx;
}
/*详细信息*/
.goods_info{
  height: 300rpx;
  border-bottom: 1px solid #ccc;
}
.goods_info_title{
  font-size: 32rpx;
  color: #009589;
  font-weight: 600;
  padding: 20rpx;
}
.goods_info_content{
  margin-left: 10rpx;

  display: -webkit-box;
  overflow: visible;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
/*底部工具栏*/
.btm_tool{
  border-top: 1px solid #ccc;
  position:fixed;
  left:0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  margin-top: 10rpx;
}
.tool_item{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-style: 24rpx;
  position: relative;
}
.icon{
  width:50rpx;
  height:50rpx;
}
.btn{
  position: absolute;
  top:0;
  bottom: 0;
  width: 100%;
  height: 100%;
  opacity: -0;
}
.button{
  display: flex;
  flex:2;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
/* 评论 */
.comment-box{
  background-color:#f7f7f7;
  padding: 20rpx 20rpx;
  margin: 0rpx 20rpx;
  font-size: 30rpx;
}
.nickname{
  color: #586b94;
}
.comment{
  margin-bottom: 20rpx;
}
.nick-time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 620rpx;
}
.reply{
  display: flex;
  flex-direction: row;
}
/* pub comment */
.pub-comment{
  background-color: #f7f7f7;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.pub-left{
  background-color: #fff;
  color: #7f7f7f;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.pub-input{
  padding: 10rpx 20rpx;
  width: 500rpx;
}
.pub-button{
  color: #7f7f7f;
  border: solid 1rpx #7f7f7f;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
}