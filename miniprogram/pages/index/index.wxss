/**index.wxss**/
page {
  background-color: #f3f3f3;
}
/* 搜索框 */
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #009589;
  white-space: nowrap;
}
/* 轮播图 */
swiper{
  height: 450rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
/* 九宫格 */
.type{
  display: flex;
}
.type-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  margin-left: 70rpx;
  margin-right: 80rpx;
}
.type-item image{
  width: 100%;
  height: 100rpx;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}
/* 商品样式 */
.goods-box{
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  margin-top: 10rpx;
}
.goods {
  background: #fff;
  margin-left: 10rpx;
  margin-bottom: 15rpx;
}
.goods-img{
  width: 345rpx;
  height: 400rpx;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
}
.goods_title {
  font-size: 38rpx;
}
.goods_price {
  color: red;
}