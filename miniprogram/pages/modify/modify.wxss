/* pages/modify.wxss */
.modify_main{
  padding: 40rpx;
  color: #009589;
}
.input{
  background-color: #eeeeee;
  color: black;
  border-radius: 2px;
  border: 1rpx solid #009589;
  width: 100%;
  height: 26px;
  line-height: 28px;
  font-size: 14px;
  display: inline-block;
}
.choose{
    padding-top: 40rpx;
}
.type{
    color: black;
    display: inline-block;
        width: 25%;
        padding: 5rpx;
        text-align: center;
        background-color: #eeeeee;
        margin-left: 40rpx;
        margin-top: 15rpx;
        border-radius: 5px;
        border: 1rpx solid #009589;
}
.good_detail{
    background-color: #eeeeee;
    color: black;
    margin-top: 40rpx;
    border-radius: 5px;
    width: 100%;
}
.detail_text{
    padding: 15rpx;
}
.good_pic{
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 20rpx;
}
.good_pic button{
    margin: 0;
    width: 100rpx; 
    height: 100rpx;
    font-size: 40rpx; 
    padding: 0; 
    display: flex; 
    justify-content: center; 
    align-items: center; 
    margin-left: 20rpx;
    margin-top: 20rpx;
}
.up_img_item{
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.form_btn_wrap{
   margin-top: 20rpx;
   display: flex;
   justify-content: center;
}
.sub_button{
    background-color: White;
    width: 15%;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0;
}
.imageRootAll {
  margin: 20rpx 50rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}


.imgItem {
  margin: 6rpx;
  position: relative;
  width: 200rpx;
  height: 200rpx;
  background: gainsboro;
}


.photo {
  width: 50%;
  height: 50%;
  margin: 25%;
}
.picker {
  width: 100%;
  margin-left: 20rpx;
  font-size: 33rpx;
  background-color: #eeeeee;
  color: black;
  border-radius: 2px;
  border: 1rpx solid #009589;
  margin-bottom: 20rpx;
}
/* 发布按钮 */
.submit {
  background: #009589;
  color: white;
  margin: 30rpx 80rpx;
  font-size: 30rpx;
}
.images_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}
.img-box{
  border: 5rpx;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.452);
  width: 200rpx;
  height: 200rpx;
  margin-left: 35rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
/* 删除图片 */
.img-delete{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  position:absolute;
  right:-20rpx;
  top:-20rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.jiage{
  height: 60rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: white;
  display: flex;
  justify-content: flex-start;
}
.rmb{
  width: 280rpx;
  border: 2rpx solid rgb(199, 197, 197);
}
.radio-group{
  display: flex;
}
.top_name{
  margin-left: 20rpx;
}
.top{
  width: 100%;
  overflow: hidden;
  margin: auto;
  font-size: 35rpx;
  background-color: white;
  border-left: 8rpx solid #009589;
  border-bottom: 1rpx solid rgba(117, 116, 116, 0.527);
}
button{
  margin-top: 20rpx;
  background-color: #009598;
}
